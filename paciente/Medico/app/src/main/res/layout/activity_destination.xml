<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.insulin.netural.medico.Destination">


    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbarTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="120sp"
        android:orientation="vertical"
        android:theme="@style/AppTheme"
        app:titleTextAppearance="@style/myStyle"></android.support.v7.widget.Toolbar>

    <TextView
        android:layout_marginTop="20sp"
        android:paddingLeft="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trip name?"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <EditText
        android:paddingLeft="16sp"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"

        android:text="" />

    <TextView
        android:paddingLeft="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Country?"
        android:textColor="@android:color/black"
        android:textSize="20sp" />


    <Spinner
        android:paddingLeft="16sp"
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingLeft="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="City?"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <Spinner
        android:paddingLeft="16sp"
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:paddingLeft="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of the arrival?"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <EditText
        android:paddingLeft="16sp"
        android:id="@+id/dta_arrival"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:inputType="text" />


    <TextView
        android:paddingLeft="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of the departure?"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <EditText
        android:paddingLeft="16sp"
        android:id="@+id/dta_departure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:inputType="text" />


    <Button
        android:layout_marginLeft="16sp"
        android:id="@+id/next"
        android:background="@android:color/white"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next" />



</LinearLayout>
